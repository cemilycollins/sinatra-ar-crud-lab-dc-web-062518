<h1>Let's edit this post!</h1>
<form action="/posts/<%= @post.id %>" method=="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name: <input type="text" name="name" value="<%= @post.name %>">
  <p>Content: <input type="text" name="content" value="<%= @post.content %>">
  <input type="submit" id="submit">
</form>
